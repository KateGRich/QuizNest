<Window x:Class="QuizNestPresentation.CreateEditQuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizNestPresentation"
        mc:Ignorable="d"
        Title="Create Quiz | Question 1" x:Name="winCreateEditQuestion" Height="600" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Grid.ColumnSpan="2" Grid.Row="0" x:Name="lblPrompt" Content="Prompt:" VerticalContentAlignment="Center" Margin="10 0 0 0" FontSize="12" FontWeight="Bold"/>
        <TextBox Grid.ColumnSpan="2" Grid.Row="0" x:Name="txtPrompt" Margin="70 10 30 10"  VerticalContentAlignment="Center" Padding="10" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

        <Label Grid.ColumnSpan="2" Grid.Row="1" x:Name="lblQuestionType" Content="Question Type:" VerticalContentAlignment="Center" Margin="10 0 0 0" FontSize="12" FontWeight="Bold"/>
        <ComboBox Grid.ColumnSpan="2" Grid.Row="1" x:Name="cboQuestionType" Margin="110 20 30 20" VerticalContentAlignment="Center" Padding="10 0 0 0"/>

        <Label Grid.ColumnSpan="2" Grid.Row="2" x:Name="lblAnswer1" Content="Answer 1:" VerticalContentAlignment="Center" Margin="10 0 0 0" FontSize="12" FontWeight="Bold"/>
        <TextBox Grid.ColumnSpan="2" Grid.Row="2" x:Name="txtAnswer1" Margin="80 20 30 20" VerticalContentAlignment="Center" Padding="10 0 0 0"/>

        <Label Grid.ColumnSpan="2" Grid.Row="3" x:Name="lblAnswer2" Content="Answer 2:" VerticalContentAlignment="Center" Margin="10 0 0 0" FontSize="12" FontWeight="Bold"/>
        <TextBox Grid.ColumnSpan="2" Grid.Row="3" x:Name="txtAnswer2" Margin="80 20 30 20" VerticalContentAlignment="Center" Padding="10 0 0 0"/>

        <Label Grid.ColumnSpan="2" Grid.Row="4" x:Name="lblAnswer3" Content="Answer 3:" VerticalContentAlignment="Center" Margin="10 0 0 0" FontSize="12" FontWeight="Bold"/>
        <TextBox Grid.ColumnSpan="2" Grid.Row="4" x:Name="txtAnswer3" Margin="80 20 30 20" VerticalContentAlignment="Center" Padding="10 0 0 0"/>

        <Label Grid.ColumnSpan="2" Grid.Row="5" x:Name="lblAnswer4" Content="Answer 4:" VerticalContentAlignment="Center" Margin="10 0 0 0" FontSize="12" FontWeight="Bold"/>
        <TextBox Grid.ColumnSpan="2" Grid.Row="5" x:Name="txtAnswer4" Margin="80 20 30 20" VerticalContentAlignment="Center" Padding="10 0 0 0"/>

        <Label Grid.ColumnSpan="2" Grid.Row="6" x:Name="lblCorrectAnswer" Content="Correct Answer:" VerticalContentAlignment="Center" Margin="10 0 0 0" FontSize="12" FontWeight="Bold"/>
        <ComboBox Grid.ColumnSpan="2" Grid.Row="6" x:Name="cboCorrectAnswer" Margin="110 20 30 20" VerticalContentAlignment="Center" Padding="10 0 0 0"/>
        <TextBox Grid.ColumnSpan="2" Grid.Row="6" x:Name="txtCorrectAnswer" Margin="110 20 30 20" VerticalContentAlignment="Center" Padding="10 0 0 0"/>

        <Grid Grid.ColumnSpan="2" Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" x:Name="btnCancel" Content="Cancel" Margin="20 30 20 10" FontSize="14" FontWeight="Bold"/>
            <Button Grid.Column="1"  x:Name="btnBack" Content="Back" Margin="20 0 20 40" FontSize="14" FontWeight="Bold"/>
            <Button Grid.Column="2" x:Name="btnNext" Content="Next" Margin="20 0 20 40" FontSize="14" FontWeight="Bold"/>
            <Button Grid.Column="3" x:Name="btnComplete" Content="Complete" Margin="20 30 20 10" FontSize="14" FontWeight="Bold"/>
        </Grid>
        
    </Grid>
</Window>
