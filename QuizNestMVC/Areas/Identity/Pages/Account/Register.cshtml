@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register New Account</h1>
<hr />
<div class="row">
    <div class="col-md-6 mx-auto">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="text-center mt-3">Let's get you cozy in the QuizNest!</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mt-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mt-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mt-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>


            <label class="control-label mt-4" for="newUserRoles">*** If you are a legacy user, just click 'Register'. No need to choose your role! ***</label>
            <div class="mt-2" id="newUserRoles">
                <label class="control-label me-5" for="roleList">I want to be a:</label>
                <div id="roleList" class="form-group d-inline-flex">
                    <div class="form-group form-check-inline ms-3 me-5">
                        <input type="checkbox" class="form-check-input" id="quizMaker" name="quizMaker" value="QuizMaker" />
                        <label class="form-check-label" for="quizMaker">Quiz Maker</label>
                    </div>
                    <div class="form-group form-check-inline ms-5">
                        <input type="checkbox" class="form-check-input" id="quizTaker" name="quizTaker" value="QuizTaker" />
                        <label class="form-check-label" for="quizTaker">Quiz Taker</label>
                    </div>
                </div>
            </div>
            <div class="text-center mt-4">
                <button id="registerSubmit" type="submit" class="w-25 btn btn-lg btn-main">Register</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}