@model IEnumerable<DataDomain.QuizVM>

@{
    ViewData["Title"] = "My Quizzes";
}

<h1>My Quizzes</h1>
<hr/>

@if(Model.Count() == 0)
{
    <div class="text-center">
        <h3>
            You have not created any quizzes yet. Create one now!
        </h3>
        <a asp-action="Create" class="btn btn-main">Create My First Quiz</a>
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th class="col-md-2">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="col-md-2">
                    @Html.DisplayNameFor(model => model.QuizTopicID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberOfQuestions)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FormattedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Active)
                </th>
                <th class="col-md-4">
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="col-md-2">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="col-md-2">
                        @Html.DisplayFor(modelItem => item.QuizTopicID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfQuestions)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FormattedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Active)
                    </td>
                    <td class="col-md-4 text-end">
                        <div>
                            @Html.ActionLink("Details", "Details", new { id = item.QuizID }, new { @class = "btn btn-sm btn-second me-2"})
                            @Html.ActionLink("Edit", "Edit", new { id = item.QuizID }, new { @class = "btn btn-sm btn-warn me-2" })
                        </div>
                        <div class="mt-2">
                            @Html.ActionLink("View/Edit Questions", "ViewQuestion", "Question", new { id = item.QuizID, questionNumber = 1, enableEdit = true }, new { @class = "btn btn-sm btn-third me-2" })
                            @Html.ActionLink("Add New Question", "Create", "Question", new { id = item.QuizID }, new { @class = "btn btn-sm btn-main" })
                        </div>
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <a asp-action="Create" class="btn btn-main">Create New Quiz</a>
    </div>
}