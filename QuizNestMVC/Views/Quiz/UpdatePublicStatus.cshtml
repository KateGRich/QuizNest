@model DataDomain.QuizRecordVM

@{
    ViewData["Title"] = "Quiz";
}

<h1>Quiz Record Details</h1>

<hr />
<div class="d-flex justify-content-center">
    <div class="card shadow card-registration col-md-6" style="border-radius: 15px;">
        <div class="card-body p-4 p-md-5">
            <div class="row">
                <form asp-action="UpdatePublicStatus">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input asp-for="QuizTopicID" class="form-control" hidden />
                    <input asp-for="QuizRecordID" class="form-control" hidden />
                    <input asp-for="UserID" class="form-control" hidden />
                    <input asp-for="GivenName" class="form-control" hidden />
                    <input asp-for="FamilyName" class="form-control" hidden />
                    <input asp-for="AttemptTypeID" class="form-control" hidden />
                    <input asp-for="QuizID" class="form-control" hidden />
                    <input asp-for="Score" class="form-control" hidden />
                    <input asp-for="DateTaken" class="form-control" hidden />
                    
                    <div class="form-group">
                        <label asp-for="QuizName" class="control-label"></label>
                        <input asp-for="QuizName" class="form-control" disabled />
                        <span asp-validation-for="QuizName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AttemptTypeID" class="control-label"></label>
                        <input asp-for="AttemptTypeID" class="form-control" disabled />
                        <span asp-validation-for="AttemptTypeID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FormattedScore" class="control-label"></label>
                        <input asp-for="FormattedScore" class="form-control" disabled />
                        <span asp-validation-for="FormattedScore" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="FormattedDate" class="control-label"></label>
                        <input asp-for="FormattedDate" class="form-control" disabled />
                        <span asp-validation-for="FormattedDate" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check mt-2">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsPublic" /> @Html.DisplayNameFor(model => model.IsPublic)
                        </label>
                    </div>

                    <div class="form-group text-center mt-3">
                        <a asp-action="TakenQuizzes" class="btn btn-warn me-2">Cancel</a>
                        <input type="submit" value="Save" class="btn btn-main" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}