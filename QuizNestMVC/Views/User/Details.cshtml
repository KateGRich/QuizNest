@model DataDomain.UserVM

@{
    ViewData["Title"] = "User Details";
}

<h1>@Model.Name's Profile</h1>

<hr />
<div class="d-flex justify-content-center">
    <div class="card shadow card-registration col-md-8" style="border-radius: 15px;">
        <div class="card-body p-4 p-md-5">
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.RoleList)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.RoleList)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.FormattedReactivationDate)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.FormattedReactivationDate)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Active)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Active)
                </dd>
            </dl>
            <div class="text-center mt-3">
                @Html.ActionLink("Edit", "Edit", new { id = Model.UserID }, new { @class = "btn btn-warn" })
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-main">Back to Users</a>
</div>